{
    "name": "wildwolf/singleton-trait",
    "description": "Singleton Trait",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "license": "MIT",
    "keywords": [
        "php",
        "singleton",
        "trait"
    ],
    "authors": [
        {
            "name": "Volodymyr Kolesnykov",
            "email": "volodymyr@wildwolf.name"
        }
    ],
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4.0"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        "test": "phpunit"
    }
}
